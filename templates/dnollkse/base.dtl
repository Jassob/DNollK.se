<!DOCTYPE html>
<html lang="sv">
<head>

  <!-- Basic Page Needs
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <meta charset="utf-8">
  <title>
    {% block title %}{% endblock title%}
  </title>
  <meta name="description"
        content="{% block description %}
        {% endblock description %}">
  <meta name="author" content="human.txt">

  <!-- Mobile Specific Metas
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- FONT
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  {% load staticfiles %}
  <link href="//fonts.googleapis.com/css?family=Raleway:400,300,600" rel="stylesheet" type="text/css">
  <link href="{% static "dnollkse/css/fonts.css" %}" rel="stylesheet">

  <!-- CSS
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <link rel="stylesheet" href="{% static "css/normalize.css" %}">
  <link rel="stylesheet" href="{% static "css/skeleton.css" %}">
  <link rel="stylesheet" href="{% static "dnollkse/css/layout.css" %}">
  {% block base-css %}
  {% endblock base-css %}
  <link rel="stylesheet" href="{% static "css/misc.css" %}">
  <!-- Favicon
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <link rel="icon" type="image/png" href="{% static "images/favicon.png" %}">

  <link rel="alternate" type="application/rss+xml"
        href="/nyheter/rss.xml" title="Nyheter - DNollK 2015">

  {% block base-js %}
  {% endblock base-js  %}
</head>
<body>
  <!-- Primary Page Layout
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <div class="band">
    <!-- header container -->
    <div class="container header card">
      <!-- header row -->
      <div class="row">
        {% block header %}
          <!-- header container
          ––––––––––––––––––––––––––––––––––––––––––––––––––-->
          <header class="u-full-width header">
            <!-- Logo -->
            <img class="two columns u-pull-left logo" src="{% static "dnollkse/images/logo.png" %}" alt="DNollK '15's logga">

            <!-- navbar -->
            <nav class="ten columns u-pull-right primary">
              <div class="mobile-nav">
                <img src="{% static "dnollkse/images/menu.svg" %}"
                     alt="meny"
                     onclick="navbarClick()" />
                <p id="nav-btn">Navigation</p>
              </div>
              {% block navigation %}
                <ul>
                  <li><a href="{% url "news" %}">startsida</a></li>
                  <li><a href="{% url "nollenkat" %}">nollenkät</a></li>
                  <li><a href="{% url "schedule" %}">schema</a></li>
                  <li><a href="{% url "events" %}">arr</a></li>
                  <li><a href="{% url "news" %}">dokument</a></li>
                  <li><a href="{% url "links" %}">länkar</a></li>
                  <li class="mobile-only"><a href="{% url "dnollk" %}">om DNollK</a></li>
                  <li class="mobile-only"><a href="{% url "foreningar" %}">om andra föreningar</a></li>
                  <li class="desktop-only">om...
                    <ul id="about-menu" class="light card">
                      <li><a href="{% url "dnollk" %}">DNollK</a></li>
                      <li><a href="{% url "foreningar" %}">Andra föreningar</a></li>
                    </ul>
                  </li>
                  <li><a href="{% url "faq" %}">faq</a></li>
                  <li><a href="{% url "contact" %}">kontakt</a></li>
                </ul>
              {% endblock navigation %}
            </nav>
      </div> <!-- end navigation row -->
      <div class="row">
        <!-- Header image -->
        <img class="u-max-full-width image" src="{% static "dnollkse/images/header.png" %}" alt="DNollK' 15 och deras ryggar">
      </div> <!-- end image row -->
          </header> <!-- end header -->
        {% endblock header %}

      </div> <!-- end header row -->
    </div> <!-- end container -->

    <div class="container content">
      <!-- content container
      ––––––––––––––––––––––––––––––––––––––––––––––––––-->
      {% block content-row %}
        <section class="row content">
          {% block content %}
          {% endblock content %}
          {% block sidebar %}
          {% endblock sidebar %}
        </section> <!-- end content -->
      {% endblock content-row %}
    </div> <!-- end container -->

    <!-- footer container
    ––––––––––––––––––––––––––––––––––––––––––––––––––-->
    <div class="footer">
      <footer class="container">
        {% block footer %}
        {% endblock footer %}
      </footer>
    </div> <!-- end footer -->
  </div> <!-- end band -->

  <!-- End Document
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  {% block base-foot-js %}
  {% endblock base-foot-js %}
</body>
</html>
