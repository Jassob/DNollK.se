{% extends 'dnollkse/base.dtl' %}

{% load staticfiles %}

<!-- Site
————————————————————————————————————————————————-->
{% block title %}DNollK 2015{% endblock title %}

{% block base-js %}
  <script src="{% static "dnollkse/js/functions.js" %}"></script>
  <script src="{% static "dnollkse/js/jquery.min.js" %}"></script>
  <script src="{% static "dnollkse/js/moment.min.js" %}"></script>
  <script src="{% static "dnollkse/js/fullcalendar.min.js" %}"></script>
  <script src="{% static "dnollkse/js/lang/sv.js" %}"></script>
  <script src="{% static "dnollkse/js/gcal.js" %}"></script>
  {% block js %}
  {% endblock js %}
{% endblock base-js %}

{% block base-css %}
  <link rel="stylesheet" href="{% static "dnollkse/css/fullcalendar.min.css" %}">
  {% block css %}
  {% endblock css %}
{% endblock base-css %}

<!-- Description, shows up as a snippet in search engine results, I think
———————————————————————————————————————————————————————————————————————-->
{% block description %}
  DataNollans hem trygga hamn under mottagningen 2015
{% endblock description %}

<!-- Sidebar to the left of the page
——————————————————————————————————————————————-->
{% block sidebar %}
  <aside id="sidebar" class="four columns u-pull-right">
    <section class="card" id="important">
      <header><h2>Viktigt</h2></header>
      <dl>
        <dt>telefon</dt>
        <dd>070-042 26 32</dd>
        <dt>mail</dt>
        <dd><a href="mailto://dnollk@dtek.se">dnollk@dtek.se</a></dd>
        <dt>adress</dt>
        <dd>Rännvägen 6, Göteborg</dd>
      </dl>
      <p><a href="/lankar">Bra länkar och viktig information</a></p>
    </section>

    <div id="calendar" class="card"></div>

    <div class="card social" id="facebook">
      <a href="http://facebook.com/Dnollk2014">Facebook</a>
    </div>

    <div class="card social" id="twitter">
      <a href="http://twitter.com/DNollK">Twitter</a>
    </div>

    <div class="card social" id="instagram">
      <a href="https://instagram.com/dnollk">Instagram</a>
    </div>
  </aside>
{% endblock sidebar %}

{% block base-foot-js %}
